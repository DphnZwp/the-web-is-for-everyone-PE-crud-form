<%- include('./partials/head') %>
<section class="hero">
  <h1><%= title %></h1>
  <p>Hier kan je een smartzone met het formulier toevoegen..</p>
  <a class="button-smartzones" href="/">Alle smart zones</a>
</section>

<form id="smartzonePostForm" action="/toevoegen" method="post">
  <div>
    <label for="name">Naam</label>
    <input type="text" name="name" id="name" />
  </div>
  <div>
    <label for="town">Stad</label>
    <input type="text" name="town" id="town" />
  </div>
  <div>
    <label for="location">Locatie</label>
    <input type="text" name="location" id="location" />
  </div>
  <div>
    <label for="function">Functie</label>
    <input type="text" name="function" id="function" />
  </div>
  <div>
    <label for="time">Tijdstip</label>
    <input type="text" name="time" id="time" />
  </div>
  <div>
    <label for="size">Grootte (plek)</label>
    <input type="text" name="size" id="size" />
  </div>
  <div>
    <label for="utilization">Gebruik (%)</label>
    <input type="text" name="utilization" id="utilization" />
  </div>
  <div>
    <label for="description">Omschrijving</label>
    <input type="text" name="description" id="description" />
  </div>
  <div>
    <label for="image">Foto (url)</label>
    <input type="text" placeholder="https://foto.com" name="image" id="image" />
  </div>
  <div class="form-buttons">
    <button id="loading-button" type="submit">Toevoegen</button>
    <button type="reset">Annuleren</button>
  </div>
  <article class="loading-text">
    <h2>Aan het laden...</h2>
    <p>Je smartzone wordt verstuurd.</p>
    <img src="/assets/icons/loading-c.png" alt="">
  </article>
</form>
 
<%- include('./partials/foot') %>